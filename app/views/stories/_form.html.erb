<%= form_for @story, :html => { class: 'form-stacked' } do |f| %>
    <% if @story.errors.any? %>
        <div class="alert-message block-message error">
          <p><strong><%= pluralize(@story.errors.count, "error") %></strong> prohibited this story from being saved:</p>
          <ul>
            <% @story.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="clearfix">
      <%= f.label :title %>
      <div class="input">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :content %>
      <div class="input">
        <%= f.text_area :content, :class => 'xxlarge' %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :user %>
      <div class="input">
        <%= f.collection_select(:user_id, User.all, :id, :name, :prompt => 'Select User') %>
      </div>
    </div>

    <div class="actions">
      <%= submit_tag "Save", :class => 'btn primary' %> or
      <%= link_to "Cancel", stories_path %>
    </div>
<% end %>
