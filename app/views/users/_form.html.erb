<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="alert-message block-message error">
          <p><strong><%= pluralize(@user.errors.count, "error") %></strong> prohibited this user from being saved:</p>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="clearfix">
      <%= f.label :full_name %>
      <div class="input">
        <%= f.text_field :full_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>

    <div class="actions">
      <%= submit_tag "Save", :class => 'btn primary' %> or
      <%= link_to "Cancel", users_path %>
    </div>
<% end %>
